upstream <%= slug %> {
	ip_hash;
	server 127.0.0.1:<%= port %>;
}

server {
  listen 80;
  server_name <%= slug %>.<%= host %>;
  error_page 502 /502.html;

  location = /502.html {
    root <%= Dir.pwd %>;
  }

  location / {
    proxy_pass http://<%= slug %>;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
  }

}
